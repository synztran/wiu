---
import { Image } from '@astrojs/image/components';
---

<section>
    <h2 class="font-mplus font-bold text-xl my-4 underline underline-offset-4 decoration-zinc-400 dark:decoration-zinc-700 decoration-4"></h2>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <li class="text-center mb-4">
            <a href="https://macdown.uranusjr.com">
                <Image class="border border-slate-300 dark:border-zinc-700 rounded-xl" src="/macdown-banner.jpeg" width={720*2} aspectRatio={2.0} alt="MacDown banner" />
                <div class="mt-3 text-xl">MacDown</div>
                <div class="opacity-70">Markdown note-taking app</div>
            </a>
        </li>
        <li class="text-center mb-4">
            <a href="https://astro.build"> 
                <Image class="border border-slate-300 dark:border-zinc-700 rounded-xl" src="/astro-banner.jpeg" width={720*2} aspectRatio={2.0} alt="AstroJS banner" />
                <div class="mt-3 text-xl">Astro</div>
                <div class="opacity-70">Framework for building static fast website</div>
            </a>
            
          
        </li>
    </ul>
</section>